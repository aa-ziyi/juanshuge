.search {
  width: 690rpx;
  height: 72rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  background: #f7f7f7;
  text-align: center;
  border-radius: 16rpx; 
}
.search-text {
  color: #ccc;
  font-size: 28rpx;
}
.booklist-wrapper {
  display: flex;
  flex-wrap: wrap;
  padding: 0 30rpx;
}
.booklist-item {
  flex: 0 0 33.3%;
  margin-top: 40rpx;
}
.booklist-detail {
  width: 172rpx;
  height: 228rpx;
  margin: 0 auto;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  font-size: 0rpx;
  padding-top: 8rpx;
  padding-left: 8rpx;
}
.booklist-add {
  width: 176rpx;
  height: 232rpx;
  margin: 0 auto;
  border: 2rpx solid #eee;
}
.add-image {
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 0 auto;
  margin-top: 88rpx;
}
.book-item {
  width: 76rpx;
  height: 104rpx;
  background: #eee;
  display: inline-block;
  margin-left: 4rpx;
  margin-top: 4rpx;
}
.booklist-text {
  width: 180rpx;
  margin: 0 auto;
}
.title {
  font-size: 24rpx;
  color: #333;
  line-height: 32rpx;
  margin-top: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.book-num {
  font-size: 20rpx;
  color: #999;
  line-height: 20rpx;
  margin-top: 10rpx;
}